@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticleItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}
<div class="fullsection">
    <br />
    <br />
    <br />
    <section>
        <h1 class="light text-center text-white">@Umbraco.Field("articleTitle")</h1>
        <hr class="col-sm-6 light" />
    </section>

    <section>
        <div class="col-lg-12 text-white text-justify">
            @if (CurrentPage.HasValue("articlePicture"))
            {
                var mediaId = CurrentPage.GetPropertyValue("articlePicture").ToString();
                <img class="float-left item-pic" src="@Umbraco.TypedMedia(mediaId).Url" alt="" />
            }
            @Umbraco.Field("articleContent")
        </div>
    </section>
</div>
